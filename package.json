{
    "name": "riven-frontend",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "packageManager": "pnpm@10.18.3",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "format": "prettier --write .",
        "lint": "prettier --check . && eslint .",
        "ba:generate": "pnpx @better-auth/cli generate --config ./better-auth.config.ts --output ./src/lib/server/schema/ba-auth.ts --yes",
        "generate-client-do-not-use-this": "openapi-ts",
        "generate-api": "tsx scripts/generate-api.ts",
        "db:generate": "drizzle-kit generate",
        "db:pull": "bash ./scripts/drizzle_pull.sh",
        "db:studio": "drizzle-kit studio"
    },
    "devDependencies": {
        "@eslint/compat": "^1.4.0",
        "@eslint/js": "^9.37.0",
        "@hey-api/openapi-ts": "0.80.11",
        "@internationalized/date": "^3.10.0",
        "@lucide/svelte": "^0.544.0",
        "@sveltejs/adapter-node": "^5.3.3",
        "@sveltejs/kit": "^2.46.4",
        "@sveltejs/vite-plugin-svelte": "^5.1.1",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.14",
        "@types/better-sqlite3": "^7.6.13",
        "@types/node": "^22.18.9",
        "@types/nprogress": "^0.2.3",
        "bits-ui": "^2.11.5",
        "clsx": "^2.1.1",
        "dotenv": "^17.2.3",
        "drizzle-kit": "^0.31.5",
        "embla-carousel-svelte": "^8.6.0",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.12.4",
        "formsnap": "^2.0.1",
        "globals": "^16.4.0",
        "layerchart": "2.0.0-next.27",
        "mdsvex": "^0.12.6",
        "openapi-typescript": "^7.9.1",
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.4.0",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "svelte": "^5.39.11",
        "svelte-check": "^4.3.3",
        "svelte-sonner": "^1.0.5",
        "sveltekit-sse": "^0.14.3",
        "sveltekit-superforms": "^2.27.2",
        "tailwind-merge": "^3.3.1",
        "tailwind-variants": "^3.1.1",
        "tailwindcss": "^4.1.14",
        "tsx": "^4.20.6",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.0",
        "vaul-svelte": "^1.0.0-next.7",
        "vite": "^6.3.6"
    },
    "dependencies": {
        "better-auth": "https://pkg.pr.new/better-auth/better-auth@5237",
        "better-sqlite3": "^11.10.0",
        "drizzle-orm": "^0.44.6",
        "embla-carousel-autoplay": "^8.6.0",
        "mode-watcher": "^1.1.0",
        "nprogress": "^0.2.0",
        "openapi-fetch": "^0.14.1",
        "zod": "^4.1.12"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@tailwindcss/oxide",
            "better-sqlite3",
            "esbuild"
        ]
    }
}
